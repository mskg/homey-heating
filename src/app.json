{
  "id": "app.mskg.homey-heating",
  "version": "0.0.0",
  "compatibility": ">= 2.0.0",
  "sdk": 2,
  "name": {
    "en": "Homey Heating Scheduler",
    "nl": "Homey Verwarmingsregelaar"
  },
  "tags": {},
  "brandColor": "#2196f3",
  "description": {
    "en": "Create and manage heating schedules",
    "nl": "CreÃ«er en beheer verwarmingsschema's"
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "flow": {
    "actions": [
      {
        "id": "apply_all",
        "title": {
          "en": "Apply all active heating plans",
          "nl": "Pas alle actieve verwarmingsschema's toe"
        }
      },
      {
        "id": "apply_plan",
        "title": {
          "en": "Apply heating plan",
          "nl": "Verwarmingsschema toepassen"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "plan",
            "placeholder": {
              "en": "Search for a plan...",
              "nl": "Zoek naar een schema..."
            }
          }
        ]
      },
      {
        "id": "set_mode",
        "title": {
          "en": "Set heating mode",
          "nl": "Stel de verwarmingsmodus in"
        },
        "args": [
          {
            "type": "dropdown",
            "name": "state",
            "values": [
              {
                "id": "0",
                "label": {
                  "en": "Automatic",
                  "nl": "Automatisch"
                }
              },
              {
                "id": "1",
                "label": {
                  "en": "1 day at home",
                  "nl": "1 dag thuis"
                }
              },
              {
                "id": "2",
                "label": {
                  "en": "1 day away from home",
                  "nl": "1 dag weg van huis"
                }
              },
              {
                "id": "3",
                "label": {
                  "en": "Sleeping",
                  "nl": "Slapen"
                }
              },
              {
                "id": "4",
                "label": {
                  "en": "Holiday",
                  "nl": "Vrije dag"
                }
              },
              {
                "id": "5",
                "label": {
                  "en": "Out of season",
                  "nl": "Buiten het seizoen"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "set_log_state",
        "title": {
          "en": "Set remote logging",
          "nl": "Stel loggen op afstand in"
        },
        "args": [
          {
            "type": "dropdown",
            "name": "state",
            "values": [
              {
                "id": "true",
                "label": {
                  "en": "to enabled",
                  "nl": "naar ingeschakeld"
                }
              },
              {
                "id": "false",
                "label": {
                  "en": "to disabled",
                  "nl": "naar uitgeschakeld"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "set_plan_state",
        "title": {
          "en": "Set heating plan",
          "nl": "Activeer verwarmingsschema"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "plan",
            "placeholder": {
              "en": "Search for a plan...",
              "nl": "Zoek naar een schema..."
            }
          },
          {
            "type": "dropdown",
            "name": "state",
            "values": [
              {
                "id": "true",
                "label": {
                  "en": "to enabled",
                  "nl": "naar ingeschakeld"
                }
              },
              {
                "id": "false",
                "label": {
                  "en": "to disabled",
                  "nl": "naar uitgeschakeld"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "set_thermostat_override",
        "title": {
          "en": "Set thermostat mode",
          "nl": "Activeer thermostaatmodus"
        },
        "args": [
          {
            "type": "dropdown",
            "name": "mode",
            "values": [
              {
                "id": "0",
                "label": {
                  "en": "Heating plan (automatic)",
                  "nl": "Verwarmingsschema (automatisch)"
                }
              },
              {
                "id": "6",
                "label": {
                  "en": "Manual until midnight",
                  "nl": "Handmatig tot middernacht"
                }
              },
              {
                "id": "7",
                "label": {
                  "en": "Fully manual",
                  "nl": "Volledig handmatig"
                }
              }
            ]
          },
          {
            "name": "my_device",
            "type": "device",
            "filter": "driver_id=virtual-thermostat"
          }
        ]
      }
    ],
    "triggers": [
      {
        "id": "thermostat_override_changed",
        "title": {
          "en": "Thermostat mode changed",
          "nl": "De thermostaatmodus is gewijzigd"
        },
        "tokens": [
          {
            "name": "mode",
            "type": "string",
            "title": {
              "en": "Mode",
              "nl": "Modus"
            },
            "example": "Automatic"
          }
        ],
        "args": [
          {
            "name": "my_device",
            "type": "device",
            "filter": "driver_id=virtual-thermostat"
          }
        ]
      },
      {
        "id": "mode_changed",
        "title": {
          "en": "Heating mode changed",
          "nl": "Verwarmingsmodus gewijzigd"
        },
        "tokens": [
          {
            "name": "mode",
            "type": "string",
            "title": {
              "en": "Mode",
              "nl": "Modus"
            },
            "example": "Automatic"
          }
        ]
      }
    ]
  },
  "author": {
    "name": "Markus Kling",
    "email": "markus.kling@gmail.com"
  },
  "contributors": {
    "contributors": [
      {
        "name": "Lennard Warnaar",
        "email": "lennard@renlen.nl"
      }
    ]
  },
  "bugs": {
    "url": "https://github.com/mskg/homey-heating/issues"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "klingmarkus"
      }
    }
  },
  "capabilities": {
    "thermostat_override": {
      "type": "enum",
      "title": {
        "en": "Thermostat mode",
        "nl": "Thermostaatmodus"
      },
      "getable": true,
      "setable": true,
      "icon": "/assets/icon.svg",
      "values": [
        {
          "id": "0",
          "title": {
            "en": "Heating plan (automatic)",
            "nl": "Verwarmingsschema (automatisch)"
          }
        },
        {
          "id": "6",
          "title": {
            "en": "Manual until midnight",
            "nl": "Handmatig tot middernacht"
          }
        },
        {
          "id": "7",
          "title": {
            "en": "Fully manual",
            "nl": "Volledig handmatig"
          }
        }
      ]
    }
  },
  "drivers": [
    {
      "id": "virtual-thermostat",
      "name": {
        "en": "Virtual Thermostat",
        "nl": "Virtuele thermostaat"
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "thermostat_override",
        "measure_temperature"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/virtual-thermostat/assets/images/large.png",
        "small": "/drivers/virtual-thermostat/assets/images/small.png"
      }
    }
  ]
}